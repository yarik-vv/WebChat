extends layout

block content
  form(action='/',name='login',method='post')
    div.signin
      i.icon-wechat
      h1= title
      p= 'Please enter your name and password'
    input(
      type='text',
      name='username',
      placeholder='Nickname',
      value='name'
    )
    div.kek
      input(
        type='password',
        name='password',
        placeholder='Password',
        value='pass'
      )
      button#login.icon-publish(
        data-loading-text="Sending..."
      )
    span#error
    div.links
      a.icon-git(
        title='source code',
        href='https://github.com/yarik-vv/webchat',
        rel='noopener noreferrer',
        target='_blank'
      )
      a.icon-code(
        title='author page'
        href='https://yarik-vv.info/',
        rel='noopener noreferrer',
        target='_blank'
      )
  script(src='/js/login.js')
