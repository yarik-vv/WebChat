extends layout

block content
  link(rel='stylesheet', href='/css/users.css')
  body
    p#title= 'Selected user:'
    div#user
      p='Username: ' + user.username
      p='Id: ' + user.id
      p='Hash: ' + user.hashedPassword
      p='Registration date: ' + user.created
    nav.menu
      a(href='/users')= 'Back to users list'
      a(href='/webchat')= 'Webchat'
      a(href='/logout')= 'Logout'
