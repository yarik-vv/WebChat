extends layout

block content
  form(action='login',method='post')
    div.signin
      h1= title
      p= 'Please enter your name and password'
    input(
      type="text",
      name="username",
      placeholder="Nickname"
    )
    input(
      type="password",
      name="password",
      placeholder="Password"
    )
    button.icon-login